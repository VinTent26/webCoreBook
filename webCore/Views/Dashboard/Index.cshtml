
@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<div class="flex-grow-1 p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-danger mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart card-icon fa-3x"></i>
                    <h3>Đơn Hàng</h3>
                    <p>@ViewBag.TotalOrders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign card-icon fa-3x"></i>
                    <h3>Tổng Doanh Thu</h3>
                    <p>@ViewBag.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
          <div class="col-md-4">
            <div class="card text-white bg-info mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-box card-icon fa-3x"></i>
                    <h3>Sản Phẩm</h3>
                    <p>@ViewBag.TotalProducts</p> <!-- Display total products here -->
                </div>
            </div>
        </div>
    </div>

    <div class="order-table mt-4">
        <h3>Đơn Hàng Cần Xác Nhận</h3>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Khách Hàng</th>
                    <th>Ngày Đặt Hàng</th>
                    <th>Giỏ Hàng</th>
                    <th>Trạng Thái</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Đỗ Cảnh</td>
                    <td>22:23:25 25-05-2024</td>
                    <td>1 Sản Phẩm</td>
                    <td><span class="badge badge-warning">Chờ Xác Nhận</span></td>
                   
                </tr>
                <!-- Additional rows omitted for brevity -->
            </tbody>
        </table>
        <a href="#" class="btn btn-link">Xem tất cả đơn hàng →</a>
    </div>
</div>
