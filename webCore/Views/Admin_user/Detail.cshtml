@model webCore.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />
@if (Model == null)
{
    <p>Không tìm thấy thông tin người dùng.</p>
}
else
{
    <link rel="stylesheet" href="/css/create_account.css" />

    <div class="form-container">
        <h2>Thông tin chi tiết người dùng</h2>
        <div class="container mt-3">

            <form method="post" enctype="multipart/form-data">
                <div class="row">
                    <!-- Phần hiển thị ảnh đại diện -->
                    <div class="col-md-3 text-center">
                        <img id="profilePreview" src="@Model.ProfileImage" )"
                             alt="Ảnh đại diện" class="rounded-circle mb-3" style="width: 120px; height: 120px;" />
                    </div>

                    <!-- Các trường thông tin -->
                    <div class="col-md-9">
                        <div class="form-row">
                            <!-- Name -->
                            <div class="form-group col-md-6">
                                <label for="name">Họ và tên</label>
                                <p>@Model.Name</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="email">Email</label>
                                <p>@Model.Email</p>
                            </div>
                            <!-- Phone -->
                            <div class="form-group col-md-6">
                                <label for="phone">Số điện thoại</label>
                                <p>@Model.Phone</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="birthday">Ngày sinh</label>
                                <p>@Model.Birthday</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="gender">Giới tính</label>
                                <p>@Model.Gender</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="address">Địa chỉ</label>
                                <p>@Model.Address</p>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="status">Trạng thái</label>
                                <p>@Model.Status</p>
                            </div>
                        </div>

                      

                    </div>

                    <a href="@Url.Action("Index", "Admin_user")" class="btn btn-secondary">Quay lại danh sách người dùng</a>
                </div>
            </form>
        </div>
    </div>
}
