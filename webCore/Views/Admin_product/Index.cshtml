@model List<webCore.Models.Product_admin> // Specify the model type

@{
    ViewData["Title"] = "Index";
    Layout = "Admin";
}
<link rel="stylesheet" href="/css/Account_admin.css" />

<div class="container">
    <h1>Danh sách sản phẩm</h1>
    <div class="button-container">
        <a href="@Url.Action("Create", "Admin_product")" class="add-btn">
            <i class="fas fa-user-plus icon"></i> Thêm
        </a>
    </div>

    <table class="account-table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Danh mục</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Trạng thái</th>
                <th>Vị trí</th>
                <th class="actions-header">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.Image))
                        {
                            <img src="@product.Image" alt="Image" style="width: 50px; height: 50px" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@product.CategoryTitle</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>

                    <td class="status-@product.Status.ToLower()">
                        @if (product.Status.Equals("Hoạt động", StringComparison.OrdinalIgnoreCase))
                        {
                            <span class="status-active">Hoạt động</span>
                        }
                        else
                        {
                            <span class="status-inactive">Dừng hoạt động</span>
                        }
                    </td>
                    <td>@product.Position</td>
                    <td class="actions-cell">
                        <button class="icon-btn edit-btn" title="Edit" onclick="window.location.href='@Url.Action("Update", "Admin_product", new { id = product.Id })'">
                            <i class="fas fa-edit"></i>
                        </button>
                        <form action="@Url.Action("DeleteConfirmed", "Account", new { id = product.Id })" method="post" style="display: inline-block;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="icon-btn delete-btn" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal Xác nhận Xóa -->
<div id="deleteModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa sản phẩm <strong id="deleteProductTitle"></strong>?</p>
            </div>
            <div class="modal-footer">
                <!-- Form xóa -->
                <form id="deleteForm" method="post" style="display:inline-block;" action="">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>


    <script>
        function showDeleteModal(id, title) {
            document.getElementById('productTitle').textContent = title;
            document.getElementById('productId').value = id;

            var formAction = '/Admin_product/DeleteConfirmed/' + id;
            document.getElementById('confirmDeleteForm').action = formAction;

            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
        //đóng modal
        function closeModal() {
            var modalElement = document.getElementById('deleteModal');
            var modal = bootstrap.Modal.getInstance(modalElement);
            if (modal) {
                modal.hide();
            } else {
                // Nếu không tìm thấy instance, có thể khởi tạo lại modal
                var newModal = new bootstrap.Modal(modalElement);
                newModal.hide();
            }
        }

    </script>

    <!-- Pagination -->
    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            <li class="page-item @((ViewBag.CurrentPage == 1) ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Admin_product", new { page = ViewBag.CurrentPage - 1 })" tabindex="-1">Trước</a>
            </li>

            <!-- Page Numbers -->
            @for (var i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Admin_product", new { page = i })">@i</a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @((ViewBag.CurrentPage == ViewBag.TotalPages) ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", "Admin_product", new { page = ViewBag.CurrentPage + 1 })">Tiếp theo</a>
            </li>
        </ul>
    </nav>

</div>
