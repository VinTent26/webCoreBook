@model List<webCore.Models.Product_admin>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var product in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <a href="@Url.Action("DetailProduct", "DetailProduct", new { id = product.Id })">
                    <img src="@product.Image" class="card-img-top" alt="@product.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">
                            @if (product.DiscountPercentage > 0)
                            {
                                <span class="badge discount-badge">Giảm @product.DiscountPercentage%</span>

                                <br />
                                <span class="text-muted old-price">
                                    @string.Format("{0:C}", product.Price)
                                </span>

                                <br />
                                <span class="price new-price">
                                    @string.Format("{0:C}", product.Price * (1 - product.DiscountPercentage / 100))
                                </span>
                            }
                            else
                            {
                                <span class="price normal-price">@string.Format("{0:C}", product.Price)</span>
                            }
                        </p>
                    </div>
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <p>Không có sản phẩm nào phù hợp với tìm kiếm.</p>
    }
</div>
