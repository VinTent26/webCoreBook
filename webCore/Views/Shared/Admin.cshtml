
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/dashboard.css" />
    <!-- Link to Font Awesome for icons -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <div class="d-flex flex-column">
        <!-- Header -->
        <div class="content flex-grow-1">
            <div class="inner-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 style="font-size:2.5rem">Admin Dashboard</h1>
                    <div class="account-info">
                        <div class="account-icon">
                            <i class="fas fa-user-circle"></i>
                            <!-- Adjust size if necessary -->
                        </div>
                        <div class="account-name">@ViewBag.AdminName</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar and Main Content -->
        <div class="d-flex">
            <nav class="sidebar bg-light border-right" style="width: 220px">
                <div class="list-group">
                    <a href="/Dashboard" class="list-group-item list-group-item-action"><i class="fas fa-home"></i> Trang Chủ</a>
                    <a href="/Account" class="list-group-item list-group-item-action"><i class="fas fa-users"></i> Người Dùng</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-list"></i> Danh Mục</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-box"></i> Sản Phẩm</a>
                    <a href="/Voucher" class="list-group-item list-group-item-action"><i class="fas fa-tags"></i> Mã Giảm Giá</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-shopping-cart"></i> Đơn Hàng</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-comments"></i> Phản Hồi</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-chart-line"></i> Thống Kê</a>
                    <a href="#" class="list-group-item list-group-item-action"><i class="fas fa-envelope"></i> Hộp Thư</a>
                    <a href="/Admin_singin"
                       class="list-group-item list-group-item-action text-danger"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a>
                </div>
            </nav>

           @RenderBody();
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

